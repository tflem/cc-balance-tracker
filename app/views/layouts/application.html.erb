<!DOCTYPE html>
<html>
  <head>
    <title>
      <% if content_for?(:title) %>
        <%= yield(:title) %>
      <% else %>
        CC Balance Tracker
      <% end %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">      
      <% flash.each do |key, message| %>
        <div class="notification is-info is-light<%= key %>">
          <%= message %>
        </div>     
        <% end %>
      <%= yield %>    
    </div>
  </body>
</html>
