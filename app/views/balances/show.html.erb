<% title(@balance.cc_name, "Balances") %>

<header>
  <h2><%= @balance.cc_name %></h2>
</header>

<div class="box">
  <p><%= "$" %><%= @balance.cc_balance %></p>
  <p><%= @balance.cc_due_date %></p>
  <%= link_to "Edit Balance",
      edit_balance_path(@balance),
      class: "update" %>
  <%= link_to "Delete Balance",
      balance_path(@balance),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this CC Balance info?" },
      class: "remove" %>
</div>

<header>
  <h2>Issues</h2>
</header>

<ul>
  <li><%= link_to "New Issue",
          new_balance_issue_path(@balance),
          class: "new" %>        
  </li>
</ul>

<ul id="issues">
  <% @balance.issues.each do |issue| %>
    <li>
      #<%= issue.id %> -
      <%= link_to issue.name, [@balance, issue] %>
    </li>
  <% end %>
</ul>
