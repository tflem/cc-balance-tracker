<div class="box">
  <div class="ui container forms">
    <%= simple_form_for(balance) do |f| %>
      <div class="field">
        <div class="control">      
          <%= f.input :cc_name, label: "Credit Card Name",
              input_html: { class: "input" }, wrapper: false,
              label_html: { class: "label" } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :cc_balance, label: "Credit Card Balance", 
              input_html: { class: "input" }, wrapper: false,
              label_html: { class: "label" } %>
        </div>
      </div> 

      <div class="field">
        <div class="control">
          <label><strong>Credit Card Due Date</strong></label><br />
          <%= f.date_field :cc_due_date %>
        </div>
      </div>              
     
      <%= f.button :submit, class: "button is-success" %>
    <% end %>
  </div>
</div>